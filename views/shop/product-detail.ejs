<body>
    <%- include('../components/navBar.ejs') %>
    
    <main class="centered">
        <h1>Product Details</h1>
        <%= product.title %>
        <hr>
        <div>
            <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
